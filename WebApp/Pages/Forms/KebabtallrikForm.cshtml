@page
@model WebApp.Pages.Forms.KebabtallrikFormModel
@{
}
<div class="">
	<h2>Kebabtallrik</h2>
	<form method="post">
		<div class="form-group my-2">
			<label>Välj vilket kött</label>
			<select class="form-select" asp-for="Food.FoodType">
				<option value="Kebabtallrik">Nöt, 100 kr</option>
				<option value="Kycklingtallrik">Kyckling, 100 kr</option>
				<option value="Gyrostallrik">Fläsk, 100 kr</option>
			</select>
		</div>
		<div class="form-group my-2">
			<label>Välj tillbehör</label>
			<select class="form-select" asp-for="Food.Sides">
				<option value="Pommes">Pommes</option>
				<option value="Ris">Ris</option>
				<option value="Grönsaker">Grönsaker</option>
			</select>
		</div>
		<div class="form-group my-2">
			<label>Info till restaurangen</label>
			<textarea class="form-control" asp-for="Food.ExtraInfo"></textarea>
		</div>

		<button type="submit" class="btn btn-primary">Beställ</button>
	</form>
</div>