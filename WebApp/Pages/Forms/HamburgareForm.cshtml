@page
@model WebApp.Pages.Forms.HamburgareFormModel
@{
}
<div class="">
	<h2>Hamburgare</h2>
	<form method="post">
		<div class="form-group my-2">
			<label>Välj vilken Burgare</label>
			<select class="form-select" asp-for="Food.FoodType">
				<option value="Cheeseburgare">Cheeseburgare, 100 kr</option>
				<option value="Dubbel Cheeseburgare">Dubbel Cheeseburgare, 120 kr</option>
				<option value="OrginalBurgare">OrginalBurgare, 100 kr</option>
			</select>
		</div>
		<div class="form-group my-2">
			<label>Välj tillbehör</label>
			<select class="form-select" asp-for="Food.Sides">
				<option value="Pommes">Pommes</option>
				<option value="Sötpommes">Sötpommes</option>
				<option value="Mixed Fries">Mixed Fries</option>
			</select>
		</div>
		<div class="form-group my-2">
			<label>Info till restaurangen</label>
			<textarea class="form-control" asp-for="Food.ExtraInfo"></textarea>
		</div>

		<button type="submit" class="btn btn-primary">Beställ</button>
	</form>
</div>